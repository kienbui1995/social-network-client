<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="400dp">
<FrameLayout
        android:layout_width="160dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:id="@+id/frameLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

    <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/img_sv"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:id="@+id/imgStudentImage"/>

    <TextView
            android:layout_gravity="bottom"
            android:padding="2dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/white"
            android:text="Lê Hoài Nam"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtStudentName"/>

    <TextView
            android:layout_margin="3dp"
            android:textColor="@color/bgToolbar"
            android:background="@drawable/bg_item_chat_round"
            android:layout_gravity="start"
            android:padding="3dp"
            android:text="A23998"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtStudentCode"/>
</FrameLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="349dp"
            android:layout_height="197dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/rcvListViPham"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>