<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:text="Sinh viên: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txtStudentName"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Lê Hoài Nam"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.joker.thanglong.CustomView.DeleteEditText
            android:textColor="#000"
            android:layout_margin="10dp"
            android:gravity="top|left"
            android:hint="Nhập nội dung vi phạm"
            android:id="@+id/edtInputStudent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"/>

    <EditText
            android:textColor="#000"
            android:layout_margin="10dp"
            android:id="@+id/edtPlace"
            android:hint="Nhập địa điểm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="39dp"
            tools:layout_editor_absoluteX="0dp"/>
<LinearLayout
        android:orientation="horizontal"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="77dp"
        tools:layout_editor_absoluteX="0dp">
    <Button
            android:paddingRight="10dp"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_save_white"
            android:id="@+id/btnChooseImage"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:text="Chọn ảnh"
            android:background="@color/bg_screen3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    <Button
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawablePadding="10dp"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/ic_camera_alt_white_24dp"
            android:id="@+id/btnCaptureImage"
            android:text="Chụp ảnh"
            android:background="@color/bg_screen4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
</LinearLayout>

    <ImageView
            android:visibility="gone"
            android:id="@+id/imgPhoto"
            android:layout_marginTop="20dp"
            android:src="@drawable/anhbia"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    <Button
            android:id="@+id/btnAddViolation"
            android:layout_margin="15dp"
            android:text="Thêm vi phạm"
            android:background="@color/bgToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>