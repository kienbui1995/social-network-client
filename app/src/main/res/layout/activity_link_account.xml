<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.joker.thanglong.LinkAccountActivity">
    <include layout="@layout/toolbar"
             tools:layout_editor_absoluteY="0dp"
             tools:layout_editor_absoluteX="0dp"
             android:id="@+id/include3"/>
<TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/viennotice"
        android:padding="5dp"
        android:gravity="center"
        android:text="Liên kết mã cá nhân có thể thực hiện bằng 2 cách"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/include3"/>
    <TextView
            android:text="Sủ dụng email thanglong.edu.vn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/textView19"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:id="@+id/linearLayout4">

        <EditText
                android:hint="Mời nhập mã sinh viên"
                android:textColor="#000"
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="93dp"
                tools:layout_editor_absoluteX="8dp"
                android:id="@+id/edtEmail"/>

        <Button
                android:id="@+id/btnSend"
                android:text="Gửi"
                android:background="@drawable/btn_message"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:text="Hoặc điền vào thông tin đăng ký"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/textView20"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="9dp"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            >

        <com.joker.thanglong.CustomView.DeleteEditText
                android:hint="Họ và tên"
                android:textColor="#000"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.joker.thanglong.CustomView.DeleteEditText
                android:hint="Mã sinh viên"
                android:textColor="#000"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginBottom="10dp"
                android:text="Đính kèm ảnh chụp mã sinh viên và chứng minh thư"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:background="@color/bgToolbar"
                android:text="Chọn ảnh"
                android:layout_marginBottom="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:background="@drawable/btn_message"
                android:text="Gửi yêu cầu liên kết "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
