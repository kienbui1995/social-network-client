<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ln_root"
              android:background="@android:color/transparent"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:padding="3dp"
                    android:src="@drawable/ic_subject_grey_700_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtNameSubject"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:padding="3dp"
                    android:src="@drawable/ic_perm_contact_calendar_grey_700_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtNameTeacher"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:padding="3dp"
                    android:src="@drawable/ic_room_grey_700_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtNameRoom"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>
    <ImageView
            android:id="@+id/imgCancel"
            android:layout_gravity="top|right"
            android:src="@drawable/ic_cancel_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
</FrameLayout>
</LinearLayout>