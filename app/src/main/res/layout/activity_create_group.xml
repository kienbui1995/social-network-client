<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.joker.thanglong.CreateGroupActivity">
    <include layout="@layout/toolbar"
             app:layout_constraintTop_toTopOf="parent"
             android:layout_marginTop="8dp"
             android:layout_marginLeft="0dp"
             app:layout_constraintLeft_toLeftOf="parent"
             android:layout_marginRight="0dp"
             app:layout_constraintRight_toRightOf="parent"
             android:id="@+id/include4"/>
    <LinearLayout
            android:background="@drawable/vienthanglong"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            android:id="@+id/linearLayout6">

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="CLB Tin học  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="Bí mật"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:textColor="#000"
                android:src="@drawable/ic_settings_black_24dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:background="@drawable/vienthanglong"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView22"
            android:id="@+id/linearLayout5">

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="Hội yêu văn thơ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="Công khai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:textColor="#000"
                android:src="@drawable/ic_settings_black_24dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
            android:text="Danh sách nhóm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView22"
            app:layout_constraintHorizontal_bias="0.034"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/include4"/>

    <Button
            android:background="@drawable/btn_following"
            android:text="Thêm nhóm"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_add"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="5dp"
            android:id="@+id/textView23"
            android:layout_marginRight="14dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView22"/>

    <LinearLayout
            android:background="@drawable/vienthanglong"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
            android:id="@+id/linearLayout7">

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="CLB âm nhạc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="Bí mật"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:textColor="#000"
                android:src="@drawable/ic_settings_black_24dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:background="@drawable/vienthanglong"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="Toán học "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#000"
                android:layout_weight="1"
                android:text="Công khai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:textColor="#000"
                android:src="@drawable/ic_settings_black_24dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
