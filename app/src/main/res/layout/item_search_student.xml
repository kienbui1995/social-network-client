<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:paddingTop="5dp"
                                             android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="344dp"
            android:layout_height="15dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/img_sv"
            android:id="@+id/imgStudentImage"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginStart="8dp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/imgStudentImage"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/linearLayout2"
            android:layout_marginStart="8dp">

        <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Lê Hoài Nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNameStudent"/>

        <TextView
                android:text="A23998"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtStudenttCode"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:id="@+id/linearLayout3"
            android:layout_marginEnd="8dp">
        <ImageView
                android:id="@+id/imgInfoStudent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_info"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/imgAddAction"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>