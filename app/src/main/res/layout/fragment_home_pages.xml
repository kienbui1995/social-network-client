                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.joker.thanglong.Fragment.HomePagesFragment"
                                             tools:layout_editor_absoluteY="25dp"
                                             tools:layout_editor_absoluteX="0dp">

    <Button
            android:paddingLeft="10dp"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:textColor="@color/bgToolbar"
            android:textAllCaps="false"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/pushpin"
            android:text="Bài viết được ghim "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnGhimTop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <android.support.constraint.ConstraintLayout
            android:background="@drawable/bg_pin"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnGhimTop"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rcvPinTopPage"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGhimTop"
                android:layout_marginTop="93dp"
                app:layout_constraintHorizontal_bias="1.0">

        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>


