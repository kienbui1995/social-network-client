<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.joker.thanglong.TeacherActivity">
    <include
            layout="@layout/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/include2"
            android:layout_marginTop="0dp"/>

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/include2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/fr_root"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnDiemDanh"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/lnEducation"
                    android:layout_marginLeft="8dp">

                <ImageView
                        android:padding="3dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_diemdanh"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView6"/>

                <TextView
                        android:padding="2dp"
                        android:background="@color/bgToolbar"
                        android:textColor="@color/white"
                        android:text="Điểm danh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/lnEducation"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="84dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    tools:layout_editor_absoluteX="143dp">

                <ImageView
                        android:padding="3dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_classroom"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                <TextView
                        android:padding="2dp"
                        android:background="@color/bgToolbar"
                        android:textColor="@color/white"
                        android:text="Lớp học"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lvLichTrinh"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="38dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/lnEducation"
                    android:layout_marginRight="8dp">

                <ImageView
                        android:padding="3dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_lich_trinh"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                <TextView
                        android:padding="2dp"
                        android:background="@color/bgToolbar"
                        android:textColor="@color/white"
                        android:text="Lịch dạy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
