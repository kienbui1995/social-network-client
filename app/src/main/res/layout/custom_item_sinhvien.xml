<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@drawable/bg_sinhvien"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:layout_editor_absoluteY="25dp"
                                             tools:layout_editor_absoluteX="0dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/img_sv"
            android:id="@+id/imgSinhVien"
            android:scaleType="centerCrop"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0" />


    <TextView

            android:text="A23998"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_msv"
            android:id="@+id/txtMaSinhVien"
            android:textSize="13sp"
            android:padding="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="26dp"/>

    <TextView
            android:text="Nguyễn Văn Kính"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTenSinhVien"
            android:textSize="15sp"
            android:background="@drawable/bg_sinhvien"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/imgSinhVien"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_sobuoidihoc"
            android:text="4/9"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSoBuoiDiHoc"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtMaSinhVien"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/imgChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTenSinhVien"
        app:srcCompat="@drawable/checked" />

    <TextView
        android:textColor="@color/bgToolbar"
        android:padding="10dp"
        android:id="@+id/txtDiemDanhMuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_msv"
        android:text="Muộn"
        android:textSize="10sp"
        android:visibility="invisible"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtSoBuoiDiHoc"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>