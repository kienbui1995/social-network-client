<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:paddingTop="5dp"
                                             android:layout_height="wrap_content"
                                             tools:layout_editor_absoluteY="25dp"
                                             tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Tìm kiếm người dùng"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/textView21"/>

    <Button
            android:background="@drawable/btn_following"
            android:text="Thêm người dùng"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_add"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="5dp"
            android:id="@+id/textView23"
            android:layout_marginRight="14dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView21"
            android:layout_marginEnd="14dp"/>

    <com.joker.thanglong.CustomView.DeleteEditText
            android:layout_width="0dp"
            android:hint="Nhập họ tên hoặc tên đăng nhập"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/deleteEditText2"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="107dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <LinearLayout
                android:layout_width="344dp"
                android:layout_height="15dp"
                tools:layout_editor_absoluteY="60dp"
                tools:layout_editor_absoluteX="8dp">

            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/imgdemo"
                android:id="@+id/imgStudentImage"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="13dp"
                android:layout_marginStart="8dp"/>

        <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/imgStudentImage"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:id="@+id/linearLayout2"
                android:layout_marginStart="8dp">

            <TextView
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:text="Lê Hoài Nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameStudent"/>

            <TextView
                    android:text="\@lehoainam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtStudenttCode"/>
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:id="@+id/linearLayout3"
                android:layout_marginEnd="8dp">

            <ImageView
                    android:id="@+id/imgInfoStudent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_info"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/imgAddAction"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_delete_forever_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>